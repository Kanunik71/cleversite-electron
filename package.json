{
  "name": "Cleversite-electron",
  "version": "0.0.1",
  "author": {
    "name": "Serg",
    "email": "kanunik71@yandex.ru",
    "url": "https://github.com/Kanunik71/"
  },
  "description": "Online-consult pult",
  "repository": "https://github.com/Kanunik71/cleversite-electron",
  "devDependencies": {
    "electron-builder": "^7.9.0",
    "electron-prebuilt": "^1.4.1"
  },
  "build": {
        "appId": "com.electron.cleversite",
        "app-category-type": "public.app-category.productivity",
        "win": {
            "iconUrl": "icons/assets-windows/icon.ico"
        },
		"mac": {
			"icon": "icons/assets-osx/icon.icns"
		},
		"dmg": {
			"icon": "icons/icons-osx/dmg_icon.icns",
			"background": "build/assets-osx/dmg_bg.png",
			"icon-size": "80",
			"title": "Cleversite",
			"contents": [
			  {
				"x": 448,
				"y": 344,
				"type": "link",
				"path": "/Applications"
			  },
			  {
				"x": 192,
				"y": 344,
				"type": "file",
				"path": "../build/mac/cleversite.app"
			  }
			]
		}
    },
	"scripts": {
		"postinstall": "install-app-deps",
		"start": "electron ./app --enable-logging",
		"dev": "NODE_ENV='development' npm run start",
		"dist": "build -m --x64 --ia32 deb"
	}
